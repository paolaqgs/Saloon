<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editar_cita"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/editnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre"
        android:importantForAutofill="no" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/servicio"/>

    <RadioGroup
        android:id="@+id/editrb_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbcorte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/corte_de_pelo" />

        <RadioButton
            android:id="@+id/rbtratamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tratamiento_capilar" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editfecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:enabled="false"
            android:hint="@string/fecha"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/editbtnfecha"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edithora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:enabled="false"
            android:hint="@string/hora"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/editbtnhora"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hora" />

        </LinearLayout>


    <EditText
        android:id="@+id/editcosto"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/total"
        android:importantForAutofill="no" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/forma_de_pago"/>

    <RadioGroup
        android:id="@+id/editrg2_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb2_tarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tarjeta"/>

        <RadioButton
            android:id="@+id/rb2_efectivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/efectivo"/>
    </RadioGroup>


    <Button
        android:id="@+id/btnedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actualizar"
        android:layout_marginTop="30dp"/>



</LinearLayout>